{
  "manifest_version": 3,
  "name": "Download Media Tabs",
  "version": "1.3.0",
  "description": "Download all open tabs that are a single media file (image, audio, video, PDF).",
  "minimum_chrome_version": "114",
  "icons": {
    "16":  "icons/icon16.png",
    "32":  "icons/icon32.png",
    "48":  "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_title": "Download media tabs",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },

  "background": { "service_worker": "src/background.js", "type": "module" },
  "permissions": ["tabs", "downloads", "scripting", "storage", "contextMenus"],
  "host_permissions": ["<all_urls>"],
  "options_page": "options/options.html"
}
