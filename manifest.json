{
  "manifest_version": 3,
  "name": "Download Media Tabs",
  "description": "Download all open tabs that are a single media file (image, audio, video, PDF).",
  "version": "1.1.0",
  "minimum_chrome_version": "114",
  "action": {
    "default_title": "Download media tabs"
  },
  "permissions": [
    "tabs",
    "downloads",
    "scripting",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html"
}
